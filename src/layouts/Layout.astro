---
import { URL_BASE } from '../variables';
interface Props {
	title: string;
	bg: string | undefined;
}

const { title, bg } = Astro.props;
const bgClass = bg ? `bg-${bg}` : 'bg-azul_claro';

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Encuentra el camino al uso racional de los antibiÃ³ticos para prevenir la resistencia bacteriana" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={URL_BASE + "/icon-192x192.png"} />


		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={bgClass}>
		<slot />
	</body>
</html>
